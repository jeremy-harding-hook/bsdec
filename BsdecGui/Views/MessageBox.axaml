<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BsdecGui.Views.MessageBox" 
		SizeToContent="WidthAndHeight" 
		CanResize="False"
		WindowStartupLocation="CenterScreen" 
		Topmost="True" 
		Icon="/Assets/bsdec.ico">
	<StackPanel HorizontalAlignment="Center">
		<TextBlock HorizontalAlignment="Center" Name="Text" Margin="20" TextAlignment="Center"/>
		<StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Name="Buttons">
			<StackPanel.Styles>
				<Style Selector="Button">
					<Setter Property="Margin" Value="5"/>
					<Setter Property="Focusable" Value="True"/>
				</Style>
			</StackPanel.Styles>
		</StackPanel>
	</StackPanel>
</Window>